// https://leetcode.com/problems/last-moment-before-all-ants-fall-out-of-a-plank/description/

class Solution {
public:
    int getLastMoment(int n, vector<int>& left, vector<int>& right) {
        int ans=0;
        for(int i=0;i<left.size();i++)
            ans=max(ans,left[i]-0);

        for(int i=0;i<right.size();i++)
            ans=max(ans,n-right[i]);

        return ans;
    }
};

// https://leetcode.com/problems/last-moment-before-all-ants-fall-out-of-a-plank/submissions/888173480/
